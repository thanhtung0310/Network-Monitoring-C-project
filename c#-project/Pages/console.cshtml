@page
@model ConsoleModel
@{
    ViewData["Title"] = "Console";
}

<body>
    <div class="row">
        <div class="column title">
            <h5>@ViewData["Title"]</h5>
        </div>
        @*<div class="column infoBar">
            Logged in as
            <span class="user usermenuup" id="user"><a href="#">admin</a></span>
        </div>*@
    </div>

    <div class="wrapper">
        <div class="sidebar">
            <button class="tm-nav-item tablinks" onclick="openContent(event,'introduction')" id="defaultOpen">
                Main
                Console
            </button>
            <button class="tm-nav-item">Create</button>
            <button class="tm-nav-item-low tablinks" onclick="openContent(event,'newDevice')">New Device</button>
            <button class="tm-nav-item-low tablinks" onclick="openContent(event,'newGraph')">New Graph</button>
            <button class="tm-nav-item">Management</button>
            <button class="tm-nav-item-low tablinks" onclick="openContent(event,'mangDevice')">Devices</button>
