                    <input type="button" name="btnClear" value="Clear" />
                    <input type="button" name="btnSave" value="Save" /> <br /> <br />
                    Search: <input type="text" />
                    Rows: <input list="rows" /> <br /> <br />
                    <datalist id="rows">
                        <option value="Default"></option>
                        <option value="10 Rows"></option>
                        <option value="15 Rows"></option>
                        <option value="20 Rows"></option>
                    </datalist>
                    <div class="header" style="background-color: grey; color: white;">Graph Templates</div>
                    <table>
                        <tr>
                            <th>Graph Name</th>
                            <th>ID</th>
                            <th>Source Type</th>
                            <th>Source Name</th>
                        </tr>
                        <tr>
                            <td><a href="#">Local Linux Machine - Load Average</a></td>
                            <td>1</td>
                            <td>Template</td>
                            <td><a href="#">Unix - Load Average</a></td>
                        </tr>
                        <tr>
                            <td><a href="#">Local Linux Machine - Logged in Users</a></td>
                            <td>2</td>
                            <td>Template</td>
                            <td><a href="#">Unix - Logged in Users</a></td>
                        </tr>
                        <tr>
                            <td><a href="#">Local Linux Machine - Memory Usage</a></td>
                            <td>3</td>
                            <td>Template</td>
                            <td><a href="#">Linux - Memory Usage</a></td>
                        </tr>
                        <tr>
                            <td><a href="#">Local Linux Machine - Processes</a></td>
                            <td>4</td>
                            <td>Template</td>
                            <td><a href="#">Unix - Processes</a></td>
                        </tr>
                        <tr>
                            <td><a href="#">Windows 11 Laptop - Load Average</a></td>
                            <td>5</td>
                            <td>Template</td>
                            <td><a href="#">Host MIB - Load Average</a></td>
                        </tr>
                        <tr>
                            <td><a href="#">Windows 11 Laptop - Logged in Users</a></td>
                            <td>6</td>
                            <td>Template</td>
                            <td><a href="#">Host MIB - Logged in Users</a></td>
                        </tr>
                    </table>
                </form>
            </div>
        </div>

