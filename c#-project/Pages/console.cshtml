            <button class="tm-nav-items">Configuration</button>
            <button class="tm-nav-item-low tablinks" onclick="openContent(event,'settings')">Settings</button>
            <button class="tm-nav-item-low tablinks" onclick="openContent(event,'users')">Users</button>
        </div>

        <div id="newDevice" class="maincontent">
            <div class="header">Create new Device</div>
            <div class="info">
                <form action="/" method="post">
                    <div class="header" style="background-color: grey; color: white;">General Device Options</div>
                    Description: <input type="text" /> <br /> <br />
                    Hostname: <input type="text" /> <br /> <br />
                    Location: <input list="locations" /> <br /> <br />
                    <datalist id="locations">
                        <option value="None"></option>
                        <option value=""></option>
                        <option value="0"></option>
                    </datalist>
                    Poller Association: <input list="pollers" /> <br /> <br />
                    <datalist id="pollers">
                        <option value="Main Poller"></option>
                    </datalist>
                    Device Site Association: <input list="Dsites" /> <br /> <br />
                    <datalist id="Dsites">
                        <option value="None"></option>
                        <option value="Core"></option>
                        <option value="Edge"></option>
                    </datalist>
                    Device Template: <input list="Dtemplates" /> <br /> <br />
                    <datalist id="Dtemplates">
                        <option value="None"></option>
                        <option value="Cacti Stats"></option>
                        <option value="Cisco Router"></option>
                        <option value="Generic SNMP Device"></option>
                        <option value="Local Linux Machine"></option>
                        <option value="Net-SNMP Device"></option>
                        <option value="Windows Device"></option>
                    </datalist>
                    Number of Collection Threads: <input list="collThreads" /> <br /> <br />
                    <datalist id="collThreads">
                        <option value="1 Thread (default)"></option>
                        <option value="2 Threads"></option>
                        <option value="3 Threads"></option>
                        <option value="4 Threads"></option>
                        <option value="5 Threads"></option>
                    </datalist>
                    Disabled Device: <input type="checkbox">
                    <div class="header" style="background-color: grey; color: white;">SNMP Options</div>
                    SNMP Version: <input list="SNMPVers" /> <br /> <br />
                    <datalist id="SNMPVers">
                        <option value="Not in use"></option>
                        <option value="Version 1"></option>
                        <option value="Version 2"></option>
                        <option value="Version 3"></option>
                    </datalist>
                    SNMP Community String: <input type="text" value="public" /> <br /> <br />
                    SNMP Port: <input type="text" value="161" /> <br /> <br />
                    SNMP Timeout: <input type="text" value="500" /> <br /> <br />
                    Maximum OIDs per GetRequest: <input list="OIDs" /> <br /> <br />
                    <datalist id="OIDs">
                        <option value="1 OID"></option>
                        <option value="2 OID's"></option>
                        <option value="3 OID's"></option>
                        <option value="4 OID's"></option>
                        <option value="5 OID's"></option>
                        <option value="10 OID's"></option>
                    </datalist>
                    Bulk Walk Maximum Repititions: <input list="Bulks" /> <br /> <br />
                    <datalist id="Bulks">
                        <option value="Auto Detect on Re-index"></option>
                        <option value="Auto Detect/Set on First re-index"></option>
                        <option value="1 Repitition"></option>
                        <option value="2 Repititions"></option>
                        <option value="3 Repititions"></option>
                        <option value="4 Repititions"></option>
                        <option value="5 Repititions"></option>
                        <option value="10 Repititions"></option>
                    </datalist>
                    <div class="header" style="background-color: grey; color: white;">
                        Availability/Reachability Options
                    </div>
                    Downed Device Detection: <input list="downedDDs" /> <br /> <br />
                    <datalist id="downedDDs">
                        <option value="None"></option>
                        <option value="PING and SNMP Uptime"></option>
                        <option value="SNMP Uptime"></option>
                        <option value="Ping"></option>
                        <option value="Ping or SNMP Uptime"></option>
                        <option value="SNMP Desc"></option>
                        <option value="SNMP GetNext"></option>
                    </datalist>
                    Ping Method: <input list="pingMs" /> <br /> <br />
                    <datalist id="pingMs">
                        <option value="ICMP Ping"></option>
                        <option value="TCP Ping"></option>
                        <option value="UDP Ping"></option>
                    </datalist>
                    Ping Port: <input type="text" value="23" /> <br /> <br />
                    Ping Timeout Value: <input type="text" value="400" /> <br /> <br />
                    Ping Retry Count: <input type="text" value="1" /> <br /> <br />
                    <div class="header" style="background-color: grey; color: white;">Additional Options</div>
                    Notes: <input type="text" style="height: 200px;" /> <br /> <br />
                    External ID: <input type="text" /> <br /> <br />
                    <input type="button" name="btnCancel" value="Cancel" />
                    <input type="button" name="btnCreateD" value="Create Device" />
                </form>
            </div>
        </div>

        <div id="newGraph" class="maincontent">
            <div class="header">Create new Graph</div>
            <div class="info">
                <form action="/" method="post">
                    <div class="header" style="background-color: grey; color: white;">New graphs for</div>
                    Devices: <input list="deviceNames" />
                    <datalist id="deviceNames">
                        <option value="Local Linux Machine"></option>
                        <option value="Windows 10"></option>
                        <option value="Windows 11"></option>
                    </datalist>
                    Graph Types: <input list="graphTypes" />
